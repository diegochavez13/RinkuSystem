<script src="@Url.Content("~/Scripts/PagosNomina.js")" type="text/javascript"></script>

<style>
    .ui-autocomplete {
        max-height: 175px;
        overflow-y: auto;
        /* prevent horizontal scrollbar */
        /*overflow-x: hidden;*/
    }
</style>

<div class="container">
    <div class="page-header">
        <h1 id="title-page-content">
            Pagos de Nómina
            <span id="optional-message-page-content">
                <small>
                    <i class="icon-double-angle-right"></i>
                </small>
            </span>
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <label id="lblNumEmpleado" class="col-sm-2 control-label no-padding-right">Num. Empleado: </label>
                    <div class="input-group col-md-2 col-xs-12">
                        <input type="text" id="txtNumeroEmpleado" class="form-control num" maxlength="9" />
                        <span class="input-group-btn">
                            <button class="btn btn-primary btn-sm control" id="btnBuscarEmpleado">
                                <i class="icon-search bigger-110"></i>
                            </button>
                        </span>
                    </div>
                </div>

                <div class="form-group ">
                    <label id="lblNombre" class="col-sm-2 control-label no-padding-right letters" for="form-field-1">Nombre:</label>
                    <div class="input-group col-md-5 col-xs-12">
                        <input type="text" id="txtNombre" class="form-control" maxlength="150" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1">Rol:</label>
                    <div class="col-md-2 col-xs-12">
                        <input type="text" id="txtRol" class="form-control" maxlength="150" disabled />
                        <input type="text" id="txtRolhidden" class="form-control hide" maxlength="150" />
                    </div>
                    <label class="col-sm-1 control-label no-padding-right" for="form-field-1">Tipo:</label>
                    <div class="col-md-2 col-xs-12">
                        <input type="text" id="txtTipo" class="form-control" maxlength="150" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label id="lblFechaInicio" class="col-md-2 control-label no-padding-right">Fecha Inicio:</label>
                    <div class="input-group col-md-2 col-xs-12 daCreation">
                        <input id="txtFechaInicio" class="form-control" type="text" readonly />
                        <span class="input-group-btn">
                            <button class="btn btn-sm btn-primary" id="btnFechaInicio">
                                <i class="icon-calendar bigger-110"></i>
                            </button>
                        </span>
                    </div>

                    <label id="lblFechaFin" class="col-md-1 control-label no-padding-right">Fecha Fin:</label>
                    <div class="input-group col-md-2 col-xs-12 daCreation">
                        <input id="txtFechaFin" class="form-control" type="text" readonly />
                        <span class="input-group-btn">
                            <button class="btn btn-sm btn-primary" id="btnFechaFin">
                                <i class="icon-calendar bigger-110"></i>
                            </button>
                        </span>
                    </div>
                </div>

                <div class="row hide" id="div-grid-Trabajadores">
                    <div class="col-md-12">
                        <table id="grid-Trabajadores"></table>
                        <div id="pager-Trabajadores"></div>
                    </div>
                </div>
                <!--Botones-->

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">
                        <button class="btn btn-sm btn-primary" id="btnVistaPrevia">
                            <i class="icon-file bigger-110"></i>
                            <span>Vista Previa</span>
                        </button>
                        <button class="btn btn-sm btn-grey" id="btnLimpiar">
                            <i class="icon-eraser bigger-110"></i>
                            <span>Limpiar</span>
                        </button>
                    </div>
                </div>
            </div><!--end form-horizontal-->
        </div><!--end col-xs-12-->
    </div><!--end row-->
</div><!--end container-->

<div class="col-xs-12">
    <div class="hide" id="modal-Preview" style="overflow: scroll">
        <div class="page-header">
            <h4 id="lblNombreTrabajador" class="blue center">
                <span id="optional-message-page-content">
                    <small>
                        <i class="icon-double-angle-right"></i>
                    </small>
                </span>
            </h4>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                <label id="lblSueldoBruto" class="blue col-sm-2 col-xs-12 col-md-2 control-label no-padding-right">Sueldo Bruto: </label>
                <label id="lblValSueldoBruto" class="col-md-2"></label>
            </div>
            <div class="form-group">
                <label id="lblISR" class="blue col-sm-2 col-xs-12 col-md-2 control-label no-padding-right">ISR: </label>
                <label id="lblValISR" class="col-md-2"></label>
            </div>
            <div class="form-group">
                <label id="lblDespensa" class="blue col-sm-2 col-xs-12 col-md-2 control-label no-padding-right">Vale de Despensa: </label>
                <label id="lblValDespensa" class="col-md-2"></label>
            </div>
            <div class="form-group">
                <label id="lblPagoNeto" class="blue col-sm-2 col-xs-12 col-md-2 control-label no-padding-right">Pago Neto: </label>
                <label id="lblValPagoNeto" class="col-md-2"></label>
            </div>
        </div>
    </div>
</div>